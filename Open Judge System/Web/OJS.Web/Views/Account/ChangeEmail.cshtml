@model OJS.Web.ViewModels.Account.ChangeEmailViewModel

@{
    ViewBag.Title = Resources.Account.Views.ChangeEmailView.Title;
}

<h3>@ViewBag.Title</h3>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="row">
            <div class="col-xs-4 text-right">
                @Html.LabelFor(m => m.Password, new { @class = "text-primary loud" })
            </div>
            <div class="col-xs-7">
                @Html.EditorFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-4 text-right">
                @Html.LabelFor(m => m.Email, new { @class = "text-primary loud" })
            </div>
            <div class="col-xs-7">
                @Html.EditorFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-4 text-right">
                @Html.LabelFor(m => m.EmailConfirmation, new { @class = "text-primary loud" })
            </div>
            <div class="col-xs-7">
                @Html.EditorFor(m => m.EmailConfirmation)
                @Html.ValidationMessageFor(m => m.EmailConfirmation)
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-4 text-right">
                <a href="/Users/Profile" class="btn btn-primary">@Resources.Account.Views.ChangeEmailView.Cancel</a>
            </div>
            <div class="col-md-7 text-left">
                <button class="btn btn-success" type="submit">@Resources.Account.Views.ChangeEmailView.Save</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}