@model IEnumerable<IGrouping<int, OJS.Web.Areas.Administration.ViewModels.AntiCheat.SubmissionSimilarityViewModel>>

@foreach (var groupedReport in Model.OrderBy(m => m.First().ProblemName))
{
    var sortedAndFilteredReports = groupedReport.Where(s => s.Points > 20).OrderBy(p => p.Differences).Take(100);
    <h3 class="text-white">@groupedReport.First().ProblemName</h3>
    <table class="table table-striped">
        <tr>
            <th>
                First Participant
            </th>
            <th>
                Second Participant
            </th>
            <th>
                Points
            </th>
            <th>
                Differences
            </th>
        </tr>
        @foreach (var report in sortedAndFilteredReports)
	    {
		    <tr>
                <td>
                    @report.FirstParticipantName
                </td>
                <td>
                    @report.SecondParticipantName
                </td>
                <td>
                    @report.Points
                </td>
                <td>
                    @report.Differences
                </td>
		    </tr>
	    }
    </table>
    <br />
}