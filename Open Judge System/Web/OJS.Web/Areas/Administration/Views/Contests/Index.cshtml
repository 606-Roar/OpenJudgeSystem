@section scripts {
    <script>
        function getTypeName(type) {
            switch (type) {
                case 0: return "Default"; break;
                case 1: return "Drop-down list"; break;
                case 2: return "Single line text"; break;
                case 3: return "Multi-line text"; break;
            }
        }
    </script>
}
