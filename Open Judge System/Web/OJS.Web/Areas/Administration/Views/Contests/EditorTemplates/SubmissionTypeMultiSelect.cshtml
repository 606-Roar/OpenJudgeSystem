@model IEnumerable<OJS.Web.Areas.Administration.ViewModels.SubmissionType.SubmissionTypeViewModel>

@(Html.Kendo().MultiSelect()
    .Name("submission-types")
    .DataTextField("Name")
    .DataValueField("Id")
    .Placeholder("Изберете типове на решенията")
    .AutoBind(false)
    .Value(Model)
    .DataSource(dataSource =>
    {
        dataSource.Read("GetAllSubmissionTypes", "Contests")
            .ServerFiltering(true);
    }))
