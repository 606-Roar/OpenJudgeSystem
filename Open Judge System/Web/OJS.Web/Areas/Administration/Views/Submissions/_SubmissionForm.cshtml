@model OJS.Web.Areas.Administration.ViewModels.Submission.SubmissionAdministrationViewModel

@using (Html.BeginForm((string)ViewBag.SubmissionAction, "Submissions", FormMethod.Post, new { id = "SubmissionForm" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.EditorForModel()
    </div>
    <div class="row">
        <div class="editor-label col-md-1">
            <button type="submit" class="btn btn-primary">Запази</button>
        </div>
        <div class="editor-label col-xs-1">
            <a href="/Administration/Submissions" class="btn btn-primary">Назад</a>
        </div>
    </div>
}