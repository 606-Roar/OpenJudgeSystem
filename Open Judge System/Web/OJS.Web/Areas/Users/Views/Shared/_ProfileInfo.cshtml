        <span class="text-primary">
            <strong>@Html.DisplayFor(m => m.UserSettings.Company)</strong>
        </span>
        <br />
        <span>
            @Html.LabelFor(m => m.UserSettings.JobTitle, new { @class = "profile-info-label" }):
        </span>
        <span class="text-primary">
            <strong>@Html.DisplayFor(m => m.UserSettings.JobTitle)</strong>
        </span>
    </div>
</div>
<br />
<div class="container">
    <a href="Settings/" class="btn btn-primary pull-right">Настройки</a>
</div>