        <span class="text-primary">
            <strong>@Html.DisplayFor(m => m.UserSettings.EducationalInstitution)</strong>
        </span>
        <br />
        <span>
            @Html.LabelFor(m => m.UserSettings.Company, new { @class = "profile-info-label" }):
